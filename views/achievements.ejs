<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EconAmi | Achievement</title>
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <!-- Tailwind -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <!-- External libraries -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=DynaPuff:wght@400..700&family=Quicksand:wght@300..700&display=swap"
        rel="stylesheet">
    <script src="https://kit.fontawesome.com/f0fa2c9149.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <style>
        @keyframes fade-in-up {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in-up {
            animation: fade-in-up 0.3s ease-out;
        }
    </style>
</head>

<body class="font-[Quicksand] bg-[#f5f2f0] text-[#151723]">
    <!-- TOP NAV -->
    <%- include('./partials/nav_top') %>

        <div id="pageContent">
            <!-- has h-dvh for now, but it depends on the page if you should keep it in -->
            <!-- There to show that bottom is sticky to the bottom -->
            <section class="min-h-dvh md:ml-14" id="content">
                <section class="p-6 space-y-4 max-w-md mx-auto mt-6">
                    <h2 class="text-2xl font-semibold text-center">Achievements</h2>
                    <!-- Placeholder for dynamic counter for user's coins -->
                    <div class="text-center text-4xl font-bold">
                        <%= user.coins %>
                    </div>
                    <p class="text-center text-sm mb-4">coins</p>

                    <!-- Dynamic Achievement Cards -->
                    <div id="achievements-container"></div>
                </section>
            </section>
        </div>

        <!-- Reward Modal -->
        <div id="rewardModal"
            class="fixed inset-0 z-50 items-center justify-center bg-transparent backdrop-blur-sm hidden">
            <div class="bg-[#f5f2f0] rounded-lg p-6 max-w-sm text-center shadow-lg animate-fade-in-up">
                <h1 class="text-3xl font-medium my-4">Achievement Redeemed!</h1>
                <p id="rewardMessage" class="font-[Quicksand] text-[#151723]">+5 coins earned!</p>
                <button onclick="closeRewardModal()"
                    class="bg-[#089ddd] border-[#0a67a0] text-white text-sm px-2 py-1 rounded-xl border-4 font-semibold hover:cursor-pointer m-2 hover:bg-[#44bcf0] hover:border-[#0c79bf] active:bg-[#5edfff] transition">
                    Close</button>
            </div>
        </div>

        <!-- Bottom Navigation -->
        <%- include('./partials/nav_bottom') %>

            <!-- Scripts -->
            <script src="/scripts/achievements.js"></script>
            <script src="/scripts/navigation.js"></script>
</body>

</html>